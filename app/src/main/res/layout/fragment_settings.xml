<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shipwebsource.mywebsource.SettingsFragment"
    android:background="@color/whiteGrey">

    <TextView
        android:id="@+id/textview_settingsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Settings &amp; preferences"
        android:background="@color/yellow"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        />


    <TextView
    android:id="@+id/textview_loggedInUser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/textview_settingsHeader"
    android:text="Hello, "
    android:textColor="@color/primaryTextColor"
    android:fontFamily="sans-serif-regular"
    android:layout_alignParentRight="true"
    android:textSize="12sp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="15dp"
    android:drawableRight="@drawable/ic_account_circle_blue_500_24dp"
    android:drawablePadding="5dp"
    android:gravity="center_vertical"
    android:layout_marginTop="15sp" />

</RelativeLayout>
